<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="seoul.tour.mapper.FreeBoardAttachMapper">

<insert id="insert">
	insert into tbl_freeboardattach (uuid, uploadpath, filename, filetype, bno)
	values (#{uuid}, #{uploadPath}, #{fileName}, #{fileType}, #{bno} )
</insert>

<delete id="delete">
	delete from tbl_freeboardattach where uuid = #{uuid}
</delete>

<select id="findByBno" resultType="seoul.tour.domain.FreeBoardAttachVO">
	select * from tbl_freeboardattach where bno = #{bno}
</select>

<delete id="deleteAll">
delete tbl_freeboardattach where bno = #{bno}
</delete>

<select id="getOldFiles" resultType="seoul.tour.domain.FreeBoardAttachVO">
select * from tbl_freeboardattach where uploadpath = to_char(sysdate -1 ,'yyyy\mm\dd')
</select>

</mapper>